<!-- Modal -->
<div id="partner-contact-modal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <input type="hidden" name="id" id="id" />
            <input type="hidden" name="idPartner" id="idPartner" />
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title partner-contact-form-title">Thêm nhân viên liên hệ</h4>
            </div>
            <div class="modal-body">
                <div class="alert alert-danger hidden" id="contactNameEmplty">Bạn chưa nhập Họ tên</div>
                <div class="form-group">
                    <label class="control-label mb-10">Họ tên</label>
                    <input name="contactName" id="contactName" required maxlength="450" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label class="control-label mb-10">Email</label>
                    <input name="email" id="email" type="email" placeholder="someone@gmail.com" maxlength="150" class="form-control">
                </div>
                <div class="form-group">
                    <label class="control-label mb-10">Điện thoại</label>
                    <input name="mobile" id="mobile" type="tel" class="form-control">
                </div>
                <div class="form-group">
                    <label class="control-label mb-10">Vị trí</label>
                    <input name="positionTitle" id="positionTitle" placeholder="Trưởng phòng,..." maxlength="150" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label class="control-label mb-10">Ghi chú</label>
                    <textarea name="note" id="note" maxlength="150" type="text" class="form-control"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary" id="partner-contact-save">Lưu lại</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button>
            </div>
        </div>

    </div>
</div>